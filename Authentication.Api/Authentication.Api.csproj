        <PackageReference Include="Refit.HttpClientFactory" Version="6.3.2" />
        <PackageReference Include="RentRide.AuthenticationApi.Models" Version="1.3.0" />
        <PackageReference Include="Serilog.AspNetCore" Version="6.0.1" />
